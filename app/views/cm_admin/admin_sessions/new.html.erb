<div id="box">

	<h1>Chautauqua Who-am-us login</h1>
	<div class="block" id="block-login">
		<h2>Login Box</h2>
		<div class="content login">
			
			<% semantic_form_for @admin_session, :url => cm_admin_login_url do |f| %>
				<% f.inputs do %>
				  <%= f.input :login %>
				  <%= f.input :password %>
				  <% f.buttons do %>
				    <%= f.commit_button I18n.t(:'formtastic.actions.admin_session.new') %>
				  <% end %>			      
				<% end %>
			
			  <%#= link_to I18n.t(:'cm_admin.admin_sessions.new.reset_password'), new_cm_admin_password_reset_path %>
			<% end %>
		</div>
	</div>
</div>
