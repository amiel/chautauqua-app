<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
	    <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", applications_path  %></li>
  		<li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_application_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Applications</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
										<th>
					<%= t("activerecord.attributes.application.name", :default => t("activerecord.labels.name", :default => "Name")) %>
</th>
					          <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @applications.each do |application| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= application.id %>
          </td>
										<td>
						<%= link_to application.name, application_path(application) %>
					</td>
										<td>
            <%= application.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", application_path(application) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_application_path(application) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", application_path(application), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>