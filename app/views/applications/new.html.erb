	<div class="secondary-navigation">
		<ul class="wat-cf">
		</ul>
	</div>          
	<div class="content">
		<div class="inner">
			<%= spreadhead 'intro' %>
			<%= link_to_function 'Read More...', '', :class => 'show_hide' %>
