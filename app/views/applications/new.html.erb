				<%= spreadhead 'info' %>
			</div>
		</div>
	</div>
</div>



<div class="block">
	<div class="secondary-navigation">
		<ul class="wat-cf">
		</ul>
	</div>          
	<div class="content">
		<h2 class="title"><%=t :'applications.title' %></h2>
		<div class="inner">
			<% semantic_form_for @application, :url => applications_path, :html => { :class => 'form' } do |f| -%>
				<%= render :partial => "form", :object => f %>
			<% end -%>
		</div>
	</div>
</div>

